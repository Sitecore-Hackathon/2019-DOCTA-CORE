@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<DoctaCore.Project.Demo.Article>

<h1>@Editable(x => x.Title)</h1>
@if (IsInEditingMode || !string.IsNullOrEmpty(Model.Introduction))
{
    <div class="lead text-muted">
        @Editable(x => x.Introduction)
    </div>
}


@if (IsInEditingMode || !string.IsNullOrEmpty(Model.Main_Content))
{
    @Editable(x => x.Main_Content)
}
